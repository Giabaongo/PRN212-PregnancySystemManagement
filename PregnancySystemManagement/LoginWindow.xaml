<Window x:Class="PregnancySystemManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PregnancySystemManagement"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Email:" Margin="0,10"/>
            <TextBox x:Name="txtEmail" Height="25"/>
            
            <TextBlock Text="Password:" Margin="0,10"/>
            <PasswordBox x:Name="txtPassword" Height="25"/>
            
            <Button x:Name="btnLogin" Content="Login" 
                    Margin="0,20" Height="30"
                    Click="btnLogin_Click"/>
            
            <TextBlock x:Name="txtError" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
