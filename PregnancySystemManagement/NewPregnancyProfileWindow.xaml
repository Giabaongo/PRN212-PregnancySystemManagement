<Window x:Class="PregnancySystemManagement.NewPregnancyProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PregnancySystemManagement"
        mc:Ignorable="d"
        Title="New Pregnancy Profile"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create New Pregnancy Profile"
                   FontSize="24"
                FontWeight="Bold"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <StackPanel Grid.Row="1"
                Margin="0,0,0,10">
            <TextBlock Text="Profile Name:"
                    Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox"
                    Height="25"/>
        </StackPanel>

        <StackPanel Grid.Row="2"
                Margin="0,0,0,10">
            <TextBlock Text="Conception Date:"
                    Margin="0,0,0,5"/>
            <DatePicker x:Name="ConceptionDatePicker"
                    Height="25"/>
        </StackPanel>

        <StackPanel Grid.Row="3"
                Margin="0,0,0,10">
            <TextBlock Text="Due Date:"
                    Margin="0,0,0,5"/>
            <DatePicker x:Name="DueDatePicker"
                    Height="25"/>
        </StackPanel>

        <StackPanel Grid.Row="4"
                Margin="0,0,0,10">
            <TextBlock Text="Pregnancy Status:"
                    Margin="0,0,0,5"/>
            <ComboBox x:Name="StatusComboBox"
                    Height="25">
                <ComboBoxItem Content="Active"/>
                <ComboBoxItem Content="Completed"/>
                <ComboBoxItem Content="Terminated"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"/>
            <Button x:Name="SaveButton"
                    Content="Save"
                    Width="100"
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window> 