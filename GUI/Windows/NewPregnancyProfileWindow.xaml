<Window x:Class="GUI.Windows.NewPregnancyProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Pregnancy Profile"
        Height="300"
        Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                Text="Create New Pregnancy Profile"
                FontSize="16"
                FontWeight="Bold"
                Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1"
                Margin="0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                        Grid.Column="0"
                        Text="Profile Name:"
                        Margin="0,5"/>
                <TextBox x:Name="txtName"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,5"/>

                <TextBlock Grid.Row="1"
                        Grid.Column="0"
                        Text="Conception Date:"
                        Margin="0,5"/>
                <DatePicker x:Name="dpConceptionDate"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,5"/>

                <TextBlock Grid.Row="2"
                        Grid.Column="0"
                        Text="Due Date:"
                        Margin="0,5"/>
                <DatePicker x:Name="dpDueDate"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,5"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
            <Button x:Name="btnSave"
                    Content="Save"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="btnSave_Click"/>
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="100"
                    Height="30"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 