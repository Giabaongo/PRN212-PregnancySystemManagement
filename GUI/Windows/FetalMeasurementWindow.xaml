<Window x:Class="GUI.Windows.FetalMeasurementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fetal Measurements"
        Height="500"
        Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                Text="Enter Fetal Measurements"
                FontSize="16"
                FontWeight="Bold"
                Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1"
                Margin="0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                        Grid.Column="0"
                        Text="Week:"
                        Margin="0,5"/>
                <TextBox x:Name="txtWeek"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,5"/>

                <TextBlock Grid.Row="1"
                        Grid.Column="0"
                        Text="Weight (grams):"
                        Margin="0,5"/>
                <TextBox x:Name="txtWeight"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,5"/>

                <TextBlock Grid.Row="2"
                        Grid.Column="0"
                        Text="Height (cm):"
                        Margin="0,5"/>
                <TextBox x:Name="txtHeight"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,5"/>

                <TextBlock Grid.Row="3"
                        Grid.Column="0"
                        Text="Biparietal Diameter (cm):"
                        Margin="0,5"/>
                <TextBox x:Name="txtBiparietalDiameter"
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="0,5"/>

                <TextBlock Grid.Row="4"
                        Grid.Column="0"
                        Text="Femoral Length (cm):"
                        Margin="0,5"/>
                <TextBox x:Name="txtFemoralLength"
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="0,5"/>

                <TextBlock Grid.Row="5"
                        Grid.Column="0"
                        Text="Head Circumference (cm):"
                        Margin="0,5"/>
                <TextBox x:Name="txtHeadCircumference"
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="0,5"/>

                <TextBlock Grid.Row="6"
                        Grid.Column="0"
                        Text="Abdominal Circumference (cm):"
                        Margin="0,5"/>
                <TextBox x:Name="txtAbdominalCircumference"
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="0,5"/>

                <TextBlock Grid.Row="7"
                        Grid.Column="0"
                        Text="Notes:"
                        Margin="0,5"/>
                <TextBox x:Name="txtNotes"
                        Grid.Row="7"
                        Grid.Column="1"
                        Margin="0,5"
                        Height="60"
                        TextWrapping="Wrap"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
            <Button x:Name="btnSave"
                    Content="Save"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="btnSave_Click"/>
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="100"
                    Height="30"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 